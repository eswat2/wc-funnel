#!/bin/bash
TARGET=funnel-gfx-wc
LINE=`ack version ../$TARGET/package.json`
VERSION=`echo $LINE | sed 's/^.*[^0-9]\([0-9]*\.[0-9]*\.[0-9]*\).*$/\1/'`
LAST=`cat .version`

if [ "$VERSION" = "$LAST" ];
then
  if [ $# == 0 ]
  then
    echo -- skip... [ $VERSION ]
  fi
else
  echo -- $VERSION
  echo $VERSION > .version
  sed "s/VERSION/$VERSION/g" <.template.html >index.html

  git commit -a -m "bump $VERSION"
  git push
  now
  now --prod
fi
